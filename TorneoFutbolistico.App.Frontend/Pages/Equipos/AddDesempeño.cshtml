@page
@model TorneoFutbolistico.App.Frontend.Pages.Equipos.AddDesempeñoModel
@{
}
<h1>Asignar Desempeño</h1>
<form method="post">
    <div class="form-group">
        <label for="idEquipo">Director Tecnico</label>
        <input type="text" id="idEquipo" name="idEquipo" class="form-control" value="@Model.equipo.Id" readonly>
    </div>
    <div class="form-group">
        <label for="idDesempeño">Desempeño en Puntos</label>
        <select name="idDesempeño" id="idDesempeño" class="form-control">
            @foreach (var desempeño in Model.desempeños)
            {
                <option value="@desempeño.Id">@desempeño.Puntos</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Asignar Desempeño</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>