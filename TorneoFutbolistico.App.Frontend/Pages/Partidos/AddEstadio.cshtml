@page
@model TorneoFutbolistico.App.Frontend.Pages.Partidos.AddEstadioModel
@{
}
<h1>Asignar Estadio</h1>
<form method="post">
    <div class="form-group">
        <label for="idPartido">Partido</label>
        <input type="text" id="idPartido" name="idPartido" class="form-control" value="@Model.partido.Id" readonly>
    </div>
    <div class="form-group">
        <label for="idEstadio">Estadio</label>
        <select name="idEstadio" id="idEstadio" class="form-control">
            @foreach (var estadio in Model.estadios)
            {
                <option value="@estadio.Id">@estadio.NombreEstadio</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Asignar Estadio</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>