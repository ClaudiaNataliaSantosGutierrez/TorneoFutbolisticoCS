@page
@model TorneoFutbolistico.App.Frontend.Pages.Arbitros.IndexModel
@{
}
<h1>Listado de Arbitros</h1>
<td>
                <a class="btn btn-primary" asp-page="./Create" >Nuevo Arbitro</a>
                <table class="table"></table>
              </td>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Apellidos</th>
      <th scope="col">Telefono</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
      @foreach (var Arbitro in Model.Arbitros)
      {
          <tr>
              <td>@Arbitro.Nombre</td>
              <td>@Arbitro.Apellidos</td>
              <td>@Arbitro.NumeroTelefono</td>
              <td>
                <a class="btn btn-primary" asp-page="./Details" asp-route-id="@Arbitro.id">Detalle</a>
                <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Arbitro.id">Editar</a>
              </td>
          </tr>
      }
  </tbody>
</table>