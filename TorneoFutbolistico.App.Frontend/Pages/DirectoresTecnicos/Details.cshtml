@page
@model TorneoFutbolistico.App.Frontend.Pages.DirectoresTecnicos.DetailsModel
@{
}
<h1>Detalles DirectoresTecnicos</h1>
<table class="table table-dark">
    <tr>
        <th scope="col">Nombre</th>
        <td>@Model.directorTecnico.Nombre</td>
    </tr>
    <tr>
        <th scope="col">Apellidos</th>
        <td>@Model.directorTecnico.Apellidos</td>
    </tr>
    <tr>
        <th scope="col">Documento</th>
        <td>@Model.directorTecnico.Documento</td>
    </tr>
    <tr>
        <th scope="col">NumeroTelefono</th>
        <td>@Model.directorTecnico.NumeroTelefono</td>
    </tr>
    <tr>
        <th scope="col">Id_DS</th>
        <td>@Model.directorTecnico.Id_DS</td>
    </tr>
    <tr>
        <th scope="col">Equipo</th>
        @if(Model.directorTecnico.Equipo == null)
        {
            <td>
                <a class="btn btn-primary" asp-page="./AddEquipo" asp-route-id="@Model.directorTecnico.id">Asignar Equipo</a>
            </td>
        }
        else
        {
            <td>@Model.directorTecnico.Equipo.NombreEquipo</td>
        }
    </tr>
</table>
<a class="btn btn-primary" asp-page="./Index">Volver</a>