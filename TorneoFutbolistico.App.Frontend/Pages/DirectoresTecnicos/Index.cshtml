@page
@model TorneoFutbolistico.App.Frontend.Pages.DirectoresTecnicos.IndexModel
@{
}
<form method="get">
  <div class="form-group">
    <label for="b">Buscar</label>
    <input name="b" id="b" class="form-control" asp-for="@Model.bActual">
  </div>
  <button type="submit" class="btn btn-primary">Buscar</button>
</form>

<h1>Listado de DirectoresTecnicos</h1>
<td>
                <a class="btn btn-primary" asp-page="./Create" >Nuevo Director Tecnico</a>
                <table class="table"></table>
              </td>          
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Apellidos</th>
      <th scope="col">Telefono</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
      @foreach (var DirectorTecnico in Model.DirectoresTecnicos)
      {
          <tr>
              <td>@DirectorTecnico.Nombre</td>
              <td>@DirectorTecnico.Apellidos</td>
              <td>@DirectorTecnico.NumeroTelefono</td>
              <td>
                <a class="btn btn-primary" asp-page="./Details" asp-route-id="@DirectorTecnico.id">Detalle</a>
                <a class="btn btn-secondary" asp-page="./Edit" asp-route-id="@DirectorTecnico.id">Editar</a>
              </td>
          </tr>
      }
  </tbody>
</table>