@page
@model TorneoFutbolistico.App.Frontend.Pages.Desempeños.IndexModel
@{
}
<h1>Listado de Desempeños</h1>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">PartidosJugados</th>
      <th scope="col">PartidosGanados</th>
      <th scope="col">Puntos</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
      @foreach (var Desempeño in Model.Desempeños)
      {
          <tr>
              <td>@Desempeño.PartidosJugados</td>
              <td>@Desempeño.PartidosGanados</td>
              <td>@Desempeño.Puntos</td>
              <td>
                <a class="btn btn-primary" asp-page="./Details" asp-route-Id="@Desempeño.Id">
                  Detalle
                </a>
              </td>
          </tr>
      }
  </tbody>
</table>