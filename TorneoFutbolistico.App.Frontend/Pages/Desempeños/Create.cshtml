    <div class="form-group">
        <label asp-for="desempeño.PartidosGanados"></label>
        <input asp-for="desempeño.PartidosGanados" class="form-control">
        <span asp-validation-for="desempeño.PartidosGanados" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="desempeño.PartidosEmpatados"></label>
        <input asp-for="desempeño.PartidosEmpatados" class="form-control">
        <span asp-validation-for="desempeño.PartidosEmpatados" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="desempeño.PartidosPerdidos"></label>
        <input asp-for="desempeño.PartidosPerdidos" class="form-control">
