@page
@model TorneoFutbolistico.App.Frontend.Pages.Municipios.IndexModel
@{
}
<form method="get">
  <div class="form-group">
    <label for="b">Buscar</label>
    <input name="b" id="b" class="form-control" asp-for="@Model.bActual">
  </div>
  <button type="submit" class="btn btn-primary">Buscar</button>
</form>

<h1>Listado de Municipios</h1>
<td>
                <a class="btn btn-primary" asp-page="./Create" >Nuevo Municipio</a>
                <table class="table"></table>
              </td>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">NombreMunicipio</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
      @foreach (var Municipio in Model.Municipios)
      {
          <tr>
              <td>@Municipio.NombreMunicipio</td>
              <td>
                <a class="btn btn-primary" asp-page="./Details" asp-route-Id="@Municipio.Id">Detalle</a>
                <a class="btn btn-secondary" asp-page="./Edit" asp-route-Id="@Municipio.Id">Editar</a>
              </td>
          </tr>
      }
  </tbody>
</table>