@page
@model TorneoFutbolistico.App.Frontend.Pages.Municipios.IndexModel
@{
}
<h1>Listado de Municipios</h1>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">NombreMunicipio</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
      @foreach (var Municipio in Model.Municipios)
      {
          <tr>
              <td>@Municipio.Id</td>
              <td>@Municipio.NombreMunicipio</td>
              <td>
                <a class="btn btn-primary" asp-page="./Details" asp-route-Id="@Municipio.Id">
                  Detalle
                </a>
              </td>
          </tr>
      }
  </tbody>
</table>