@page
@model TorneoFutbolistico.App.Frontend.Pages.Municipios.DetailsModel
@{
}
<h1>Detalles Municipios</h1>
<table class="table table-dark">
    <tr>
        <th scope="col">Id</th>
        <td>@Model.municipio.Id</td>
    </tr>
    <tr>
        <th scope="col">NombreMunicipio</th>
        <td>@Model.municipio.NombreMunicipio</td>
    </tr>
    <tr>
        <th scope="col">Equipo</th>
        @if(Model.municipio.Equipo == null)
        {
            <td>
                <a class="btn btn-primary" asp-page="./AddEquipo" asp-route-Id="@Model.municipio.Id">Asignar Equipo</a>
            </td>
        }
        else
        {
            <td>@Model.municipio.Equipo.NombreEquipo</td>
        }
    </tr>
</table>
<a class="btn btn-primary" asp-page="./Index">Volver</a>