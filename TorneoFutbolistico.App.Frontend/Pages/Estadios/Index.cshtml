@page
@model TorneoFutbolistico.App.Frontend.Pages.Estadios.IndexModel
@{
}
<form method="get">
  <div class="form-group">
    <label for="b">Buscar</label>
    <input name="b" id="b" class="form-control" asp-for="@Model.bActual">
  </div>
  <button type="submit" class="btn btn-primary">Buscar</button>
</form>

<h1>Listado de Estadios</h1>
<td>
                <a class="btn btn-primary" asp-page="./Create" >Nuevo Estadio</a> 
                <table class="table"></table>
              </td> 
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">NombreEstadio</th>
      <th scope="col">Direccion</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
      @foreach (var Estadio in Model.Estadios)
      {
          <tr>
              <td>@Estadio.NombreEstadio</td>
              <td>@Estadio.Direccion</td>
              <td>
                <a class="btn btn-primary" asp-page="./Details" asp-route-Id="@Estadio.Id">
                  Detalle
                </a>
                <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Estadio.Id">Editar</a>
              </td>
          </tr>
      }
  </tbody>
</table>