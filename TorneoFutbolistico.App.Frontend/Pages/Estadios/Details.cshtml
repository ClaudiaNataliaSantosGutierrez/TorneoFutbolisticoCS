@page
@model TorneoFutbolistico.App.Frontend.Pages.Estadios.DetailsModel
@{
}
<h1>Detalles Estadios</h1>
<table class="table table-dark">
    <tr>
        <th scope="col">NombreEstadio</th>
        <td>@Model.estadio.NombreEstadio</td>
    </tr>
    <tr>
        <th scope="col">Direccion</th>
        <td>@Model.estadio.Direccion</td>
    </tr>
    <tr>
        <th scope="col">Municipio</th>
        @if (Model.estadio.Municipio == null)
        {
            <td>
                <a class="btn btn-primary" asp-page="./AddMunicipio" asp-route-id="@Model.estadio.Id">
                    Asignar Municipio
                </a>
            </td>
        }
        else
        {
            <td>@Model.estadio.Municipio.NombreMunicipio</td>
        }
    </tr>
</table>
<a class="btn btn-primary" asp-page="./Index">Volver</a>